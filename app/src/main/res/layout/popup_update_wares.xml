<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x600"
    android:layout_height="@dimen/y800"
    android:background="@drawable/shape_popup_update_wares"
    android:orientation="vertical">

    <com.wang.avi.AVLoadingIndicatorView
        android:layout_width="@dimen/x500"
        android:layout_height="@dimen/y500"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:indicatorName="BallSpinFadeLoaderIndicator"
        app:indicatorColor="@android:color/holo_orange_light"
        android:id="@+id/id_popup_update_wares_loading"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:text="提示信息"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/x50"
        android:id="@+id/id_popup_update_text_view_hint"
        />

</LinearLayout>