<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x800"
    android:layout_height="@dimen/y1200"
    android:background="@drawable/shape_popup_deliver_background"
    android:orientation="vertical">

    <com.wang.avi.AVLoadingIndicatorView
        android:layout_width="@dimen/x500"
        android:layout_height="@dimen/y500"
        android:layout_marginStart="@dimen/x150"
        android:layout_marginTop="@dimen/x150"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:indicatorName="BallRotateIndicator"
        android:id="@+id/id_popup_deliver_loading"
        app:indicatorColor="@android:color/holo_orange_dark" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:gravity="center"
        android:id="@+id/id_popup_deliver_text_view_hint"
        android:textSize="@dimen/x50"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y200"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y50"
        android:background="@drawable/shape_popup_deliver_counter"
        android:textColor="@android:color/white"
        android:textSize="@dimen/x70"
        android:id="@+id/id_popup_deliver_image_view_counter"
        android:text="32"
        android:gravity="center" />

</LinearLayout>